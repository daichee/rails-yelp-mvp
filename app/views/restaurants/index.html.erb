<nav class="navbar navbar-default" role="navigation" id="navbar-index">
  <a class="navbar-brand" href="/restaurants">Restaurants List</a>
  <a href="/restaurants/new">New restaurant</a>
</nav>

<div class="container">
  <div class="row">
    <div class="col-8">
      <% @restaurants.each do |restaurant| %>
        <h2><%= link_to restaurant.name, restaurant_path(restaurant.id) %></h2>
        <p><%= restaurant.category %></p>
        <%= link_to "Delete", restaurant_path(restaurant.id), method: :delete, data: { confirm: "Delete #{restaurant.name}?" } %>
        <p></p>
      <% end %>
    </div>
  </div>
</div>

